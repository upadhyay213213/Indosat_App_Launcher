                    android:id="@+id/widget_app6_transparent"
                    android:layout_width="@dimen/app_icon_img_size"
                    android:layout_height="@dimen/app_icon_img_size"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/indosat_widget_margin" />

                <TextView
                    android:layout_width="@dimen/app_name_lable_size"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/widget_app_names_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/indosat_widget_margin"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/widget_app7_transparent"
                    android:layout_width="@dimen/app_icon_img_size"
                    android:layout_height="@dimen/app_icon_img_size"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/indosat_widget_margin" />

                <TextView
                    android:layout_width="@dimen/app_name_lable_size"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/widget_app_names_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/indosat_widget_margin"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/widget_app8_transparent"
                    android:layout_width="@dimen/app_icon_img_size"
                    android:layout_height="@dimen/app_icon_img_size"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/indosat_widget_margin"
                    android:alpha="0.5" />

                <TextView
                    android:layout_width="@dimen/app_name_lable_size"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/widget_app_names_text_size" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>

                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:singleLine="true"
                    android:text="@string/app6_name"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/widget_app_names_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/indosat_widget_margin"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/widget_app7"
                    android:layout_width="@dimen/app_icon_img_size"
                    android:layout_height="@dimen/app_icon_img_size"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/indosat_widget_margin"
                    android:src="@drawable/duel_otak" />

                <TextView
                    android:layout_width="@dimen/app_name_lable_size"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:singleLine="true"

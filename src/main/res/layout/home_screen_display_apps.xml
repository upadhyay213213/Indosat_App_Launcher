                    android:layout_height="@dimen/app_icon_img_size"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/indosat_widget_margin"
                    android:src="@drawable/cipika_store" />

                <TextView
                    android:layout_width="@dimen/app_name_lable_size"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:singleLine="true"

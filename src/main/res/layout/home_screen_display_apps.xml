            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/indosat_widget_margin"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/widget_app3_transparent"
                    android:layout_width="@dimen/app_icon_img_size"
                    android:layout_height="@dimen/app_icon_img_size"
                    android:layout_gravity="center_horizontal"
